<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FhbuttonMapper">
	
	<!--表名 -->
	<sql id="tableName">
		sys_fhbutton
	</sql>
	
	<!-- 字段 -->
	<sql id="InsertField">
		name,	
		jurisdiction_name,	
		remark,	
		fhbutton_id
	</sql>
	<sql id="SelectField">
		name,	
		jurisdiction_name as jurisdictionName,	
		remark,	
		fhbutton_id as fhbuttonId
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{name},	
		#{jurisdictionName},	
		#{remark},	
		#{fhbuttonId}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="InsertField"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			fhbutton_id = #{fhbuttonId}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			name = #{name},
			jurisdiction_name = #{JurisdictionName},
			remark = #{remark},
		fhbutton_id = fhbutton_id
		where 
		fhbutton_id = #{fhbuttonId}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="SelectField"></include>
		from 
		<include refid="tableName"></include>
		where 
			fhbutton_id = #{fhbuttonId}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="SelectField"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
		and
			(
				name LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				 or 
				jurisdiction_name LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
			)
				
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="SelectField"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			fhbutton_id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- wzx149156999 -->
</mapper>